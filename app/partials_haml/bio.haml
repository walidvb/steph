%h1.section-header{"my-accordion" => true} CV
.section-body
	.bio-header{"my-html" => "header"}
	%ul.bio-list
		%li{"ng-repeat" => "category in bio"}
			%h3 {{category.category}}
			%ul
				/If it's an array, ie if it's not the later experiences
				%li{"ng-repeat"=>"exp in category.data  | orderBy:'-date'"}
					%span.bio-date {{exp.date}}
					%span.fadeIn.bio-title{"my-html" => 'exp.text'}
					%span.bio-venue{"my-html" => 'exp.venue'}
					%span.bio-location{"my-html" => 'exp.location'}
		%li
			%ul.bio-shows
				%li{"ng-repeat" => "category in shows |Â orderBy:'-categoryName'"}
					%h3 {{category.categoryName}} Exhibitions
					%ul.bio-years
						%li{"ng-repeat" => "year in category.shows | orderBy:'-year'"}
							.bio-year {{year.year}}
							-# | date:'yyyy'}} 
							%ul
								%li{"ng-repeat" => "line in year.experiences | orderBy:'-date'"} 
									%span.fadeIn.bio-title{"my-html" => 'line.text'}
									%span.bio-venue{"my-html" => 'line.venue'}
									%span.bio-location{"my-html" => 'line.location'}


	%a.bio-pdf{:href => "{{pdf.url}}"} {{pdf.title}}