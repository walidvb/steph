%ul.project-list
	%li.project{"ng-repeat" => "project in projects | filter: {type: 'project', public: true} | orderBy:'-date'", :style => "background-image: url('{{project.thumb}}')"}
		%a.project-details{"ng-href" => "#project/{{project.id}}"}
			%div
				%span.project-title {{project.title}}
				·
				%span.project-date {{project.date | date:'yyyy'}}
			%div
				%span.project-category {{project.category}}
				·
				%span.project-dimensions {{project.dimensions}}
